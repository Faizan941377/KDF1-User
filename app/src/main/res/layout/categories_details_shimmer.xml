<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorOffWhite"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bt_rowCategoryDetails_productDetails">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/pb_rowCategoryDetail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:indeterminateTint="@color/lightGray"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_rowCategoryDetailPizza"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/lightGray"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_rowCategoryDetailPizza"

                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_productName"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:background="@color/lightGray"
                        android:text="Hot &amp; Spicy"
                        android:textColor="@color/lightGray"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rowCategories_rs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="RS:"
                            android:background="@color/lightGray"
                            android:textColor="@color/lightGray"
                            android:textStyle="italic|bold"/>


                        <TextView
                            android:id="@+id/tv_rowCategories_details_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="1000"
                            android:background="@color/lightGray"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/lightGray"
                            android:textStyle="italic|bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rowCategories_details_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Desciption"
                            android:maxLines="2"
                            android:background="@color/lightGray"
                            android:textColor="@color/lightGray"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/tv_rowCategories_details_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Stock"
                            android:layout_gravity="center"
                            android:background="@color/lightGray"
                            android:textColor="@color/lightGray"
                            android:textStyle="bold"
                            android:textSize="12dp"/>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_rowCategoryDetail_cart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/ico_cart"
                    android:backgroundTint="@color/lightGray"
                    android:padding="20dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>